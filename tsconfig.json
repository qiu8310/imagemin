{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "removeComments": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ]
}
